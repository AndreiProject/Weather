<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">
            @dimen/fragment_days_weather_toolbar_title_expanded_text_size
        </item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_collapsed_text_size</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginBottom">@dimen/progress_bar_margin</item>
        <item name="android:background">@drawable/progress_rounded_corner</item>
        <item name="android:elevation">@dimen/progress_bar_elevation</item>
        <item name="android:indeterminateTint">@color/black</item>
        <item name="android:padding">@dimen/progress_bar_padding</item>
    </style>
</resources>